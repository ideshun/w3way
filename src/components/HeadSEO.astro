---
import type { CollectionEntry } from "astro:content";
import { SITE, SITE_TITLE } from "../consts";

type Props = { canonicalUrl: URL } & CollectionEntry<"docs">["data"];

const { image, title, canonicalUrl } = Astro.props;
const formattedContentTitle = `${title} ðŸš€ ${SITE_TITLE}`;
// const imageSrc = image?.src;
// const canonicalImageSrc = new URL(imageSrc, Astro.site);
const imageAlt = image?.alt;
---

<!-- Page Metadata -->
<!-- OpenGraph Tags -->
<meta property="og:title" content={formattedContentTitle} />
<meta property="og:type" content="article" />
<meta property="og:author" content="Deshun" />
<meta property="og:url" content={canonicalUrl} />
<link rel="canonical" href={canonicalUrl} />
<meta property="og:locale" content={SITE.defaultLanguage} />
<!-- <meta property="og:image" content={canonicalImageSrc} /> -->
<meta property="og:image:alt" content={imageAlt} />
<meta property="og:site_name" content={SITE.title} />
<meta name="description" property="og:description" content={SITE.description} />
<meta name="keywords" content={SITE.keywords} />
